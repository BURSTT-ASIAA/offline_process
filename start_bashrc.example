## add the following to your $HOME/.bashrc
export PATH1=$PATH
alias bda="export PATH=$PATH:/data/kylin/bin; export PYTHONPATH=/data/kylin/bin:/data/kylin/integral:$PYTHONPATH; . mod_activate.sh bursttda; export LD_LIBRARY_PATH=/opt/intel/oneapi/compiler/2023.0.0/linux/compiler/lib/intel64_lin:$LD_LIBRARY_PATH"
